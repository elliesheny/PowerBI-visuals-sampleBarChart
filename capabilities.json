      "kind": "Grouping"
    },
    {
      "displayName": "Tooltips",
      "name": "Tooltips",
      "kind": "Measure"
    }
  ],
  "dataViewMappings": [
    {
      "conditions": [
        {
          "category": {
            "max": 1
          },
          "measure": {
            "max": 1
          },
          "measuredisplay": {
            "max": 1
          }
        }
      ],
      "categorical": {
        "categories": {
          "select": [
            { "for": { "in": "category" } },
            { "for": { "in": "measuredisplay" } }
          ]
        },
        "values": {
          "select": [
            {
              "bind": {
                "to": "measure"
              }
            }
          ]
        }
      }
    }
  ],
